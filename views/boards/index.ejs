<main>
  <menu>

  <form id="add-board" action="/boards" method="POST">
    <input type="submit" value="+ New Board">
  </form>

  <% boards.forEach(function(board) { %>
    <div>
      <a href="/boards/<%= board._id %>"><%= board.title %></a>
    </div>
  <% }) %>



  <!-- UNUSED CODE -->
</menu>
<board>
  <% boards.forEach(function(board) { %>
    <div class="board">
      <% board.posts.forEach(function(post) { %>

          <div class="post" ondblclick="replaceWithTextarea('<%= post.content %>')">
            <div class="post-content"><%= post.content %></div>
            <textarea class="edit-post-it"><%= post.content %></textarea>
          </div>

        <!-- <form action="/posts/<%= post._id %>?_method=PUT" method="POST"> -->
